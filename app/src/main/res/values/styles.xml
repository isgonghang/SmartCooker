<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>
    <style name="OrangeButtonLargePressed">
        <item name="android:textSize">36px</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:background">@drawable/selector_button_large_pressed</item>
    </style>

    <style name="OrangeButtonLargeEnable">
        <item name="android:textSize">36px</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:background">@drawable/title_drable</item>
    </style>
    <style name="OrangeButtonSmall">
        <!--<item name="android:textColor">#556699</item>-->
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:background">@drawable/selector_button_small</item>
    </style>
</resources>
